#!/bin/bash

# App deployed as debug right now!

# Generate requirements.txt 
source venv/bin/activate
pip freeze > requirements.txt

# Generate js bundle
node_modules/browserify/bin/cmd.js -e front/main.coffee -o app/static/javascripts/bundle.js --verbose -t coffeeify

# Create & move to deployment dir
rm -rf /tmp/heroku_remindme
cp -r ../remindme /tmp/heroku_remindme
cd /tmp/heroku_remindme

# Create needed files
rm -rf .git .gitignore
echo "venv" >> .gitignore
echo "*.pyc" >> .gitignore
echo "web: newrelic-admin run-program python app/app.py --log-file -" > Procfile

#Â Initialize git
git init
heroku git:remote -a zozor-remindme

# Commit and push
git add .
git commit -am "release" | grep release
git push -f heroku master

# Run
heroku ps:scale web=1
heroku logs -t
